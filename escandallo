    <script>
        function calculate() {
            const getVal = (id) => parseFloat(document.getElementById(id).value) || 0;

            const hardware = getVal('aluminio') + getVal('corteLaser') + getVal('anodizado');
            const ops = getVal('packaging') + getVal('envio');
            const marketing = getVal('marketing');
            const multiplier = getVal('multiplier');
            const ventasAnuales = getVal('ventasAnuales');

            // Gastos Fijos Anuales
            const totalFijos = getVal('fijoPatente') + getVal('fijoWeb') + getVal('fijoMail') + getVal('fijoOtros');
            const fijoPorUnidad = ventasAnuales > 0 ? totalFijos / ventasAnuales : 0;

            // Mermas (5% sobre producción)
            const mermas = (hardware + getVal('packaging')) * 0.05;

            // COGS (Coste unitario total)
            const totalCosteUnitario = hardware + ops + marketing + fijoPorUnidad + mermas;

            // Precio Venta Sin IVA
            const pvpSinIva = totalCosteUnitario * multiplier;

            // Gastos Variables (Comisiones 2.5% + Devoluciones 3%) = 5.5% sobre PVP Sin IVA
            const variablesVenta = pvpSinIva * 0.055;

            const pvpFinal = pvpSinIva * 1.21;
            const beneficioNeto = pvpSinIva - totalCosteUnitario - variablesVenta;
            const margen = pvpSinIva > 0 ? (beneficioNeto / pvpSinIva) * 100 : 0;
            const breakEven = beneficioNeto > 0 ? Math.ceil(totalFijos / (pvpSinIva - (totalCosteUnitario - fijoPorUnidad) - variablesVenta)) : '-';

            // Update UI
            document.getElementById('resTotalCoste').innerText = totalCosteUnitario.toFixed(2) + '€';
            document.getElementById('resPvpFinal').innerText = pvpFinal.toFixed(2) + '€';
            document.getElementById('resBeneficio').innerText = beneficioNeto.toFixed(2) + '€';
            document.getElementById('resMargenLabel').innerText = margen.toFixed(1) + '%';
            document.getElementById('resMargenBar').style.width = Math.min(margen, 100) + '%';
            document.getElementById('resBreakEven').innerText = breakEven;
        }

        // Init
        calculate();
    </script>
